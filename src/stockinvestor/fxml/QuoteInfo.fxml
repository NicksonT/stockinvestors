<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="244" prefWidth="235" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockinvestor.controller.quoteInfoController">
            <children>
                <ImageView fx:id="stockImage" fitHeight="150.0" fitWidth="150.0">
                    <Image url="@../images/test.jpg" />
         <VBox.margin>
            <Insets left="40.0" />
         </VBox.margin>
                </ImageView>
                <Label fx:id="stockName" text="StockName" />
                <Label fx:id="stockPrice" text="StockPrice" />
                <Button fx:id="buyStock" onAction="#handleButtonAction">Buy Stock</Button>
                <Button fx:id="sellStock">Sell Stock</Button>

            </children>
        </VBox>
