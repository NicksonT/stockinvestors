<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="244" prefWidth="358" xmlns="http://javafx.com/javafx/8"
            fx:controller="stockinvestor.controller.quoteInfoController">
    <top>
        <StackPane fx:id="topbox" prefHeight="88.0" prefWidth="358">
            <padding>
                <Insets bottom="15" left="12" right="12" top="15"/>
            </padding>
            <children>
                <Label fx:id="name" text="QUOTE NAME" StackPane.alignment="CENTER"/>
                <Label fx:id="quoteticker" text="QUOTE TICKER" StackPane.alignment="BOTTOM_CENTER"/>

            </children>
        </StackPane>
    </top>
    <left>


    </left>
    <center>
        <Text fx:id="stocksheld" text="Stocks held" textAlignment="CENTER" BorderPane.alignment="TOP_CENTER"/>
    </center>
    <right>
        <VBox fx:id="rightPane" maxHeight="244.0" maxWidth="235.0" minHeight="244.0" minWidth="235.0">
            <children>
                <Button fx:id="buyStock">Buy Stock</Button>
                <Button fx:id="sellStock">Sell Stock</Button>

            </children>
        </VBox>

    </right>
    <bottom>
    </bottom>
    <stylesheets>
        <URL value="@../css/mainscreen.css"/>
    </stylesheets>
</BorderPane>
