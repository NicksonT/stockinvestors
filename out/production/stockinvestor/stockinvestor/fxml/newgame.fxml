<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>




<GridPane fx:controller="stockinvestor.controller.NewGameController"
          xmlns:fx="http://javafx.com/fxml"  hgap="50" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label fx:id="mainmessage" wrapText="true" textAlignment="CENTER" text="Please enter a username"
           GridPane.columnIndex="1" GridPane.rowIndex="0"
           GridPane.columnSpan="2"
            />
    <TextField fx:id="userid"
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            GridPane.columnSpan="1"/>
    <Button fx:id ="submit" text ="Start game" onAction="#handleButtonAction" GridPane.halignment="CENTER"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <stylesheets>
        <URL value="@../css/MainMenu.css" />
    </stylesheets>
</GridPane>